<Page x:Class="TsaregorodtsevLab2.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TsaregorodtsevLab2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="450"
      Title="Регистрация">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                   Text="Регистрация" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <Label Grid.Row="1" Grid.Column="0"
               Content="Логин:" 
               Margin="0,5,10,5"
               VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1"
                 x:Name="LoginTextBox"
                 ToolTip="Введите логин (минимум 4 символа)"
                 Margin="0,5,0,5"
                 Height="25"/>

        <Label Grid.Row="2" Grid.Column="0"
               Content="Пароль:" 
               Margin="0,5,10,5"
               VerticalAlignment="Center"/>
        <PasswordBox Grid.Row="2" Grid.Column="1"
                    x:Name="PasswordBox"
                    ToolTip="Введите пароль (минимум 6 символов)"
                    Margin="0,5,0,5"
                    Height="25"/>

        <Label Grid.Row="3" Grid.Column="0"
               Content="Подтвердите пароль:" 
               Margin="0,5,10,5"
               VerticalAlignment="Center"/>
        <PasswordBox Grid.Row="3" Grid.Column="1"
                    x:Name="ConfirmPasswordBox"
                    ToolTip="Повторите введенный пароль"
                    Margin="0,5,0,5"
                    Height="25"/>

        <Label Grid.Row="4" Grid.Column="0"
               Content="Email:" 
               Margin="0,5,10,5"
               VerticalAlignment="Center"/>
        <TextBox Grid.Row="4" Grid.Column="1"
                x:Name="EmailTextBox"
                ToolTip="Введите ваш email"
                Margin="0,5,0,5"
                Height="25"/>

        <CheckBox Grid.Row="5" Grid.ColumnSpan="2"
                  x:Name="AgreementCheckBox"
                  Content="Я согласен с условиями использования"
                  Margin="0,15,0,10"
                  HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="6" Grid.ColumnSpan="2"
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom">
            <Button x:Name="LoginButton" 
                Click="LoginButton_Click"
                Content="Войти" 
                Width="100" 
                Height="30" 
                Margin="0,0,50,0"/>
            <Button x:Name="RegisterButton" 
                    Click="RegisterButton_Click"
                    Content="Зарегистрироваться" 
                    Width="140" 
                    Background="#FF7CA950"
                    Foreground="White"
                    Height="30" 
                    Margin="5,0,5,0"/>
            <Button x:Name="CancelButton" 
                    Click="CancelButton_Click"
                    Content="Выход" 
                    Background="#FFBB411D"
                    Foreground="White"
                    Width="100" 
                    Height="30" 
                    Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</Page>