<Page x:Class="TsaregorodtsevLab2.Pages.ViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TsaregorodtsevLab2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewPage">

    <Grid>
        <TabControl>
            <TabItem Header="Меню" MouseDown="UpdateMenu">
                <Frame x:Name="ViewMenuFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>

            <TabItem Header="Блюдо" MouseDown="UpdateDish">
                <Frame x:Name="ViewDishFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>

            <TabItem Header="Тип блюда" MouseDown="UpdateDishesType">
                <Frame x:Name="ViewDishTypeFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
