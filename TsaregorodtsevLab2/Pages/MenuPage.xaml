<Page x:Class="TsaregorodtsevLab2.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TsaregorodtsevLab2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">

    <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TabControl Grid.Row="1">
                <TabItem Header="Создание">
                    <Frame x:Name="CreateFrame" NavigationUIVisibility="Hidden"/>
                </TabItem>

                <TabItem Header="Изменение">
                    <Frame x:Name="EditFrame" NavigationUIVisibility="Hidden"/>
                </TabItem>

                <TabItem Header="Удаление">
                    <Frame x:Name="DeleteFrame" NavigationUIVisibility="Hidden"/>
                </TabItem>

                <TabItem Header="Просмотр">
                    <Frame x:Name="ViewFrame" NavigationUIVisibility="Hidden"/>
                </TabItem>
            </TabControl>
        </Grid>
    </Page>
