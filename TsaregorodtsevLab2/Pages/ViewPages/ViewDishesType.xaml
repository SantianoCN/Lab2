<Page x:Class="TsaregorodtsevLab2.Pages.ViewDishesType"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Типы блюд">
    <ScrollViewer>
        <Grid>
        <DataGrid x:Name="DishTypesDataGrid" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название типа" Binding="{Binding Name}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock FontSize="12" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0, 20" Text="Нажмите в любом месте чтобы обновить"/>
    </Grid>
    </ScrollViewer>
</Page>