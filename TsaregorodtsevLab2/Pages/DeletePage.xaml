<Page x:Class="TsaregorodtsevLab2.Pages.DeletePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TsaregorodtsevLab2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DeletePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="1" HorizontalAlignment="Center" FontSize="22" Text="Выберите сущность для удаления"/>
        <ComboBox Grid.Row="2" x:Name="DeleteChoice" Width="240" Height="22"/>
        <Button Grid.Row="3" Margin="0,40" Content="Удалить" Width="200" Height="22" Background="#FFBB411D" Click="DeleteButton_Click"/>
    </Grid>
</Page>
